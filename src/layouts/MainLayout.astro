---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import clsx from 'clsx';
---

<Layout>
	<div slot="header">
		<nav class="border-gray-200 bg-white dark:bg-gray-900">
			<div class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4">
				<a href={Astro.url.host} class="flex items-center space-x-3 rtl:space-x-reverse">
					<Image
						src="/acrmlogo.png"
						alt="لوگو آس تل خط تلفن ثابت اینترنتی voip"
						loading={'eager'}
						width={58}
						height={58}
						class="rounded-full"
					/>
					<div
						class="mr-2 flex flex-row items-center self-center whitespace-nowrap font-yekan md:mr-4 md:flex-col md:items-start"
					>
						<div class="flex flex-row font-bold">
							<span class="ml-1 text-3xl text-blue-800 md:text-4xl">آس</span>
							<span class="mr-1 text-3xl text-blue-950 md:text-4xl">تل</span>
						</div>
						<span class="mr-4 text-base font-extralight text-primary-default md:mr-0 md:text-xl"
							>خرید خط تلفن ثابت اینترنتی</span
						>
					</div>
				</a>
				<div class="flex items-center space-x-6 rtl:space-x-reverse">
					<div class="flex flex-col space-y-2 rounded-xl bg-primary-100 p-2">
						<a
							href="tel:02191099010"
							class="text-sm text-primary-default transition-all animate-in hover:underline dark:text-white"
							>91099010 - 021</a
						>
						<a
							href="tel:02191301390"
							class="text-sm text-primary-default transition-all animate-in hover:underline dark:text-white"
							>91301390 - 021</a
						>
					</div>
					<a href="https://astel.ir/login">
						<button
							type="button"
							class="rounded-lg bg-blue-700 px-4 py-2 text-center text-sm font-medium text-white transition-all hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
							>درگاه مشتریان</button
						></a
					>
					<a href="/dashboard">
						<button
							type="button"
							class="rounded-lg bg-blue-700 px-4 py-2 text-center text-sm font-medium text-white transition-all hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
							>درگاه مدیریت</button
						></a
					>
				</div>
			</div>
		</nav>
		<nav class="bg-gray-50 dark:bg-gray-700">
			<div class="mx-auto max-w-screen-xl px-4 py-3">
				<div class="flex items-center">
					<ul class="mt-0 flex flex-row space-x-8 text-sm font-medium rtl:space-x-reverse">
						<li
							class={clsx({
								['border-b-2 border-primary-600 px-2 text-primary-600']: Astro.url.pathname === '/',
								['text-black transition-all hover:border-b-2 hover:border-primary-600 hover:px-2 hover:text-primary-600']:
									Astro.url.pathname !== '/',
							})}
						>
							<a href={Astro.url.pathname === '/' ? null : '/'}>خانه</a>
						</li>

						<li
							class="transition-all hover:border-b-2 hover:border-primary-600 hover:px-2 hover:text-primary-600"
						>
							<button
								id="internet-phone"
								data-dropdown-toggle="internet-phone-dropdown"
								data-dropdown-trigger="hover"
								data-dropdown-delay="250"
								class="flex w-full items-center justify-between rounded px-3 py-2 text-gray-700 hover:bg-gray-100 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white dark:focus:text-white md:w-auto md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:bg-transparent"
								>خط تلفن اینترنتی<svg
									class="ms-3 h-2.5 w-2.5"
									aria-hidden="true"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 10 6"
								>
									<path
										stroke="currentColor"
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="m1 1 4 4 4-4"></path>
								</svg></button
							>
							<div
								id="internet-phone-dropdown"
								class="z-10 hidden w-auto divide-y divide-gray-100 rounded-lg bg-white font-normal shadow dark:divide-gray-600 dark:bg-gray-700"
							>
								<div class="p-4 pb-0 text-gray-900 dark:text-white md:pb-4">
									<ul class="space-y-4" aria-labelledby="internet-phone">
										<li>
											<a
												href="https://astel.ir/service/asiatech-phone-number/"
												class="group flex items-center text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-500"
											>
												<span class="sr-only">خط تلفن اینترنتی آسیاتک</span>
												<Image
													src="/asiatech.png"
													class="mx-2"
													alt="لوگو شرکت آسیاتک"
													width={16}
													height={16}
												/>
												 خط تلفن اینترنتی آسیاتک
											</a>
										</li>
									</ul>
								</div>
								<div class="p-4 pb-0 text-gray-900 dark:text-white md:pb-4">
									<ul class="space-y-4">
										<li>
											<a
												href="https://astel.ir/service/pishgaman-phone-number/"
												class="group flex items-center text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-500"
											>
												<span class="sr-only">خط تلفن اینترنتی پیشگامان</span>
												<Image
													src="/pishgaman.png"
													class="mx-2"
													alt="لوگو شرکت آسیاتک"
													width={16}
													height={16}
												/>
												 خط تلفن اینترنتی پیشگامان
											</a>
										</li>
									</ul>
								</div>
							</div>
						</li>
						<li
							class={clsx({
								['border-b-2 border-primary-600 px-2 text-primary-600']:
									Astro.url.pathname === '/abrecloud',
								['text-black transition-all hover:border-b-2 hover:border-primary-600 hover:px-2 hover:text-primary-600']:
									Astro.url.pathname !== '/abrecloud',
							})}
						>
							<a href="https://astel.ir/service/cloud-voip-call-center/">مرکز تلفن ابری</a>
						</li>
						<li
							class="transition-all hover:border-b-2 hover:border-primary-600 hover:px-2 hover:text-primary-600"
